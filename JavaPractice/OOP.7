package Inheritance;

// Inheritance: Use the term Extends and File name to Inherit the Code of class.
//Note! pwede gumamit ng Object Function Dito sa extends.
public class Toddler extends Person {
   
    String favoriteGame;
    //Overiding Constructors!!
    Toddler(String name, String sex, int age, String favoriteGame){
        //This Called Super Constructor
    super(name,sex,age);
    this.favoriteGame = favoriteGame;
    }
    
    void drink(){
    System.out.println("Drink Milk");
    }
    void checkStatus(){
    System.out.println("Favorite Game: "+favoriteGame);
    super.checkStatus();
    }
}
